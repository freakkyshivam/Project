<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>
  <section id="post-form">
    <div class="container">
        <h1>Create a Blog Post</h1>
        
        <form action="/submit_post" id="postForm" method="POST" enctype="multipart/form-data">
          <label for="title">Post Title:</label>
          <input type="text" id="title" name="title" placeholder="Enter your post title" required>
    
          <label for="content">Post Content:</label>
          <textarea id="content" name="content" rows="10" placeholder="Write your post content here" required></textarea>
    
          <label for="image">Upload Image:</label>
          <input type="file" id="image" name="image">
    
          <button type="submit" id="post-submit-btn">Publish Post</button>
        </form>
      </div>
  </section>

  <%- include('../partials/footer.ejs') %>